<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".StartActivity" >

    <TextView
        android:id="@+id/textTotalStr"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/hello_world" />

    <Button
        android:id="@+id/viewchar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:text="@string/loadchar"
        android:onClick="loadCharacter" />

    <Button
        android:id="@+id/newchar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/viewchar"
        android:layout_alignLeft="@+id/viewchar"
        android:layout_marginBottom="50dp"
        android:text="@string/newchar"
        android:onClick="createCharacter" />

    <Button
        android:id="@+id/deletechar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/viewchar"
        android:layout_below="@+id/viewchar"
        android:layout_marginTop="50dp"
        android:text="@string/delchar" 
        android:onClick="deleteCharacter"/>

</RelativeLayout>